@using retecs.RenderPlugin.Entities
<div class="input-control">
    <input type="@Control.Type" value="@Control.Value" @oninput="args => Control.ChangeHandler(args.Value)" readonly="@Readonly"/>
</div>

@code {
    [Parameter]
    public BlazorControl Control { get; set; }

    [Parameter]
    public string Type { get; set; }

    [Parameter]
    public bool Readonly {
        get => Control.Readonly;
        set => Control.Readonly = value;
    }

}