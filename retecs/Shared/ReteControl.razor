@using retecs.RenderPlugin.Entities
<div class="input-control">
    <input type="@Control.Type" value="@Control.Value" @onchange="args => Control.Change(args.Value)" readonly="@Readonly"/>
</div>

@code {
    [Parameter]
    public BlazorControl Control { get; set; }

    //public int Value {
    //    get => Control.Value;
    //    set => Control.Change(value);
    //}

    [Parameter]
    public string Type { get; set; }

    [Parameter]
    public bool Readonly {
        get => Control.Readonly;
        set => Control.Readonly = value;
    }

}